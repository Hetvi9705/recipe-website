title: Dynamic Cooking Tip
---

<h1>{{ title }}</h1>

<p id="tip">Click the button to get a random cooking tip!</p>

<button id="loadTip">Get Cooking Tip</button>

<script>
document.getElementById("loadTip").addEventListener("click", async () => {
  const res = await fetch("/.netlify/functions/random-tip");
  const data = await res.json();
  document.getElementById("tip").textContent = data.tip;
});
</script>

